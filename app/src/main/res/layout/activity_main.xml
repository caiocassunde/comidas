<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paises"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nome_pais"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/pais"
        android:textColor="@android:color/black"
        android:textSize="@dimen/texts" />

    <ImageView
        android:id="@+id/image_pais"
        android:layout_width="@dimen/images"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@string/pais"
        app:srcCompat="@drawable/image_pais" />

    <ImageView
        android:id="@+id/comida_pais"
        android:layout_width="@dimen/images"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@string/comida"
        app:srcCompat="@drawable/image_comida" />

    <TextView
        android:id="@+id/text_comida"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/comida"
        android:textColor="@android:color/black"
        android:textSize="@dimen/texts" />
</LinearLayout>